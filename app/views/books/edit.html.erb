<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@book, url:book_path(@book.id), method: :patch do |f| %>
  <div class="area">
  <label>Title</label>
  <%= f.text_field :title %>
  </div>

  <div class="area">
  <label>Body</label>
  <%= f.text_area :body %>
  </div>

  <bottom><%= f.submit 'Update Book' %></bottom>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
